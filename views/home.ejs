<html>
<head>
    <link rel="stylesheet" href="/home/css/style.css">
    <link rel="stylesheet" type="text/css" href="/navbar/css/style.css">
    <script src="/home/js/login.js"></script>
</head>
</head>
<body>
    <%- include('navbar.ejs') %>
    <div id="container">
        <h2>Genre</h2>
        <div id="genres">
            <div class="sectionContainer">
                <% genres.forEach((genre) =>{ %>
                    <a class="innerGenre" href="/genre/<%=genre._id%>"> 
                        <h1 class="genreTitle"><%=genre._id%></h1>
                        <img class="genreImage" src="<%=genre.url%>"></img>
                    </a>
                <% }); %>
            </div>
        </div>
        <div id="popularBooks" >
            <h2>Popular Books</h2>
            <div class="sectionContainer">
            <% popularBooks.forEach((book) =>{ %>
                <a class="innerBook" href="/book/<%=book._id%>"> 
                    <h1 class="bookTitle"><%=book._id%></h1>
                    <img class="bookImage" src="<%=book.cover%>"></img>
                </a>
            <% }); %>
            </div>
        </div>
        <div id="popularAuthors">
            <h2>Popular Authors</h2>
            <div class="sectionContainer">
            <% authors.forEach((author) =>{ %>
                <a class="innerAuthor" href="/author/<%=author._id%>"> 
                    <h1 class="authorTitle"><%=author._id%></h1>
                    <img class="authorImage" src="<%=author.picture%>"></img>
                </a>
            <% }); %>
            </div>
        </div>
    </div>
</body>
</html>