<html>
<head>
    <link rel="stylesheet" href="/genre/css/style.css">
    <script src="/genre/js/login.js"></script>
</head>
</head>
<body>
    <nav class="topnav">
        <a class="active" href="/home">Home</a>
        <a href="/account">Account</a>
        <a href="/stores">Stores</a>
        <input type="text" placeholder="Search..">
    </nav>
    <div id="container">
        <div id="genreContainer">
            <h2><%=category%></h2>
            <div id="genres">
                <% books.forEach((book) =>{ %>
                <a class="innerGenre" href="/genre/<%=book._id%>"> 
                    <h1 class="genreTitle"><%=book._id%></h1>
                    <img class="genreImage" src="<%=book.cover%>"></img>
                </a>
                <% }); %>
            </div>
        </div>
        <div id="popularBooksContainer">

        </div>
        <div id="authorsContainer">

        </div>
    </div>
</body>
</html>