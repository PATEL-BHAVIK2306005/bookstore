<!DOCTYPE html>
<html>
  <head>
    <title>Login Form</title>
    <link rel="stylesheet" type="text/css" href="/signUp/css/style.css">
    <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <script src="/signUp/js/signUp.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>
    <img class="wave" src="img/wave.png">
    <div class="container">
      <div class="login-content">
        <form>
          <img src="img/avatar.svg">
          <h2 class="title">Welcome</h2>
          <div class="input-div one">
            <div class="i">
              <i class="fas fa-user"></i>
            </div>
            <div class="input">
              <input type="text" id="username" name="username" placeholder="Username" class="input">
            </div>
          </div>
          <div class="input-div pass">
            <div class="i"> 
              <i class="fas fa-lock"></i>
            </div>
            <div class="input">
              <input type="password" id="password" name="password" placeholder="Password" class="input">
            </div>
          </div>
          <div class="input-div pass">
            <div class="i"> 
              <i class="fas fa-lock"></i>
            </div>
            <div class="input">
              <input id="email" name="email" placeholder="Email" class="input">
            </div>
          </div>
          <div class="input-div pass">
            <div class="i"> 
              <i class="fas fa-lock"></i>
            </div>
            <div class="input">
              <input type="address" id="address" name="address" placeholder="Address" class="input">
            </div>
          </div>
          <h2 id="somethingsWrong" style="font-size:small; color:red; visibility:hidden">Something went wrong try again.</h2>
          <button type="button" class="btn" onclick="signUp()">Sign Up</button>
        </form>
      </div>
    </div>
  </body>
</html>